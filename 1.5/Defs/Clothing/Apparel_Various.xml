<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_SpaceJumpsuit_SOS</defName>
    <label>civilian space undersuit</label>
    <description>A tight suit that protects the body from the coldness of space. Its durable and protects against energy based attacks and extreme temperatures, but is otherwise quite unimpressive.</description>
    <recipeMaker>
      <researchPrerequisite>ShipSpaceSuits</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/JumpsuitCivilian/Jumpsuit</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <costStuffCount>80</costStuffCount>
    <costList>
      <Synthread>20</Synthread>
      <Chemfuel>25</Chemfuel>
    </costList>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToMake>15000</WorkToMake>
      <Mass>0.6</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <ArmorRating_Heat>0.5</ArmorRating_Heat>
      <StuffEffectMultiplierInsulation_Cold>1</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>1</StuffEffectMultiplierInsulation_Heat>
      <Insulation_Cold>60</Insulation_Cold>
      <Insulation_Heat>60</Insulation_Heat>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Legs</li>
        <li>Neck</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/JumpsuitCivilian/Jumpsuit</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Spacer</li>
        <li>SpacerMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_SpaceJumpsuitMilitary_SOS</defName>
    <label>military space undersuit</label>
    <description>The military version of the standart civilian space undersuit, the Hyperweave woven into its thicker fabric increases its protection.</description>
    <recipeMaker>
      <researchPrerequisite>ShipSpaceSuits</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Jumpsuit/Jumpsuit</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <costStuffCount>110</costStuffCount>
    <costList>
      <Synthread>30</Synthread>
      <Hyperweave>20</Hyperweave>
      <Chemfuel>35</Chemfuel>
    </costList>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToMake>20000</WorkToMake>
      <Mass>0.8</Mass>
      <StuffEffectMultiplierArmor>0.35</StuffEffectMultiplierArmor>
      <ArmorRating_Heat>0.5</ArmorRating_Heat>
      <StuffEffectMultiplierInsulation_Cold>1</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>1</StuffEffectMultiplierInsulation_Heat>
      <Insulation_Cold>60</Insulation_Cold>
      <Insulation_Heat>60</Insulation_Heat>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Legs</li>
        <li>Neck</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Jumpsuit/Jumpsuit</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Spacer</li>
        <li>SpacerMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>
  <ThingDef ParentName="ArmorMachineableBase">
    <defName>Apparel_Light_ETMG_SOS</defName>
    <label>Light EVA Gear</label>
    <description>Offers some protection but its main purpose is to propel the user with the build in thrusters.</description>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <researchPrerequisite>ShipSpaceSuits</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/LightETMG/LightETMG</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.5</drawSize>
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <costList>
      <Hyperweave>10</Hyperweave>
      <Plasteel>15</Plasteel>
      <Uranium>5</Uranium>
      <ComponentSpacer>1</ComponentSpacer>
    </costList>
    <statBases>
      <WorkToMake>27000</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <Mass>5</Mass>
      <Flammability>0.6</Flammability>
      <StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
      <ArmorRating_Sharp>1.00</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.36</ArmorRating_Blunt>
      <ArmorRating_Heat>0.27</ArmorRating_Heat>
      <Insulation_Cold>20</Insulation_Cold>
      <EquipDelay>5</EquipDelay>
      <DecompressionResistance>0.75</DecompressionResistance>
      <VacuumSpeedMultiplier>5</VacuumSpeedMultiplier>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>0.5</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/LightETMG/LightETMG</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Spacer</li>
        <li>SpacerMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
      </options>
    </colorGenerator>
    <comps>
      <li>
        <compClass>SaveOurShip2.CompEVA</compClass>
      </li>
    </comps>
  </ThingDef>
  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_Light_Spacehelmet_SOS</defName>
    <label>Light EVA helmet</label>
    <description>A helmet which protects against the vacuum of space, it doesnt offer much protection.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/LightSpacehelmet/LightSpacehelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>40</costStuffCount>
    <statBases>
      <WorkToMake>3200</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>2</Mass>
      <StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2.5</EquipDelay>
    </statBases>
    <costList>
      <ComponentSpacer>2</ComponentSpacer>
      <Plasteel>10</Plasteel>
    </costList>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <researchPrerequisite>ShipSpaceSuits</researchPrerequisite>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/LightSpacehelmet/LightSpacehelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Spacer</li>
        <li>SpacerMilitary</li>
        <li>EVA</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <comps>
      <li>
        <compClass>SaveOurShip2.CompEVA</compClass>
      </li>
    </comps>
  </ThingDef>
</Defs>
